<?xml version="1.0" encoding="UTF-8"?>
<PatternDefinition 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="PatternDefinition.xsd">
	
	<Element name="patterninstance" prettyName="PatternInstance" >
		<AttributeElement name="generator" prettyName="Generator" type="#{Generator}" requiered="true" default="#{Generator.WEB}" />
		<AttributeElement name="name" prettyName="Name" type="java.lang.String" requiered="true" />
		<AttributeElement name="description" prettyName="Description" type="java.lang.String" requiered="false" />
		<AttributeElement name="image" prettyName="Image" type="java.lang.String" requiered="true" default="generic.jpg" />		
		<ChildElement ref="relatedFiles" unique="true" />
		<ChildElement ref="faces" unique="true" />		
	</Element>
	
	<Element name="relatedFiles" prettyName="RelatedFiles" unique="true">
		<AttributeElement name="image" prettyName="Image" type="java.lang.String" requiered="true" default="generic.jpg" />		
		<ChildElement ref="relatedFile" unique="false" />
	</Element>
	
	<Element name="relatedFile" prettyName="RelatedFile" >
		<AttributeElement name="name" prettyName="Name" type="java.lang.String" requiered="true" />
		<AttributeElement name="description" prettyName="Description" type="java.lang.String" requiered="false" />
		<AttributeElement name="reference" prettyName="Reference" type="java.lang.String" requiered="true" />
		<AttributeElement name="image" prettyName="Image" type="java.lang.String" requiered="true" default="generic.jpg" />		
	</Element>

	<Element name="faces" prettyName="Faces" >
		<AttributeElement name="image" prettyName="Image" type="java.lang.String" requiered="true" default="generic.jpg" />		
		<childElement ref="selection" unique="true" />
		<childElement ref="register" unique="true" />
		<childElement ref="dialog" unique="false" />
	</Element>
	
	<Element name="selection" prettyName="Selection" >
		<AttributeElement name="name" prettyName="Name" type="java.lang.String" requiered="true" />
		<AttributeElement name="description" prettyName="Description" type="java.lang.String" requiered="false" />
		<AttributeElement name="reference" prettyName="Reference" type="java.lang.String" requiered="true" />
		<AttributeElement name="image" prettyName="Image" type="java.lang.String" requiered="true" default="generic.jpg" />		
		<AttributeElement name="insert" prettyName="Insert" type="java.lang.Boolean" requiered="true" default="true" group="Mode"/>
		<AttributeElement name="update" prettyName="Update" type="java.lang.Boolean" requiered="true" default="true" group="Mode"/>
		<AttributeElement name="delete" prettyName="Delete" type="java.lang.Boolean" requiered="true" default="true" group="Mode"/>
		<AttributeElement name="display" prettyName="Display" type="java.lang.Boolean" requiered="true" default="true" group="Mode"/>
	</Element>
	
	<Element name="register" prettyName="Register">
		<AttributeElement name="name" prettyName="Name" type="java.lang.String" requiered="true" />
		<AttributeElement name="description" prettyName="Description" type="java.lang.String" requiered="false" />
		<AttributeElement name="reference" prettyName="Reference" type="java.lang.String" requiered="true" />
		<AttributeElement name="image" prettyName="Image" type="java.lang.String" requiered="true" default="generic.jpg" />		
	</Element>
	
	<Element name="dialog" prettyName="Dialog">
		<AttributeElement name="name" prettyName="Name" type="java.lang.String" requiered="true" />
		<AttributeElement name="description" prettyName="Description" type="java.lang.String" requiered="false" />
		<AttributeElement name="reference" prettyName="Reference" type="java.lang.String" requiered="true" />
		<AttributeElement name="image" prettyName="Image" type="java.lang.String" requiered="true" default="generic.jpg" />		
	</Element>
	
</PatternDefinition>