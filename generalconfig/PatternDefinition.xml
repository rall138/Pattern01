<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE PatternDefinition PUBLIC "//UNKNOWN/" "PatternDefinition.dtd">
<PatternDefinition 
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:noNamespaceSchemaLocation="PatternSchemaDefinition.xsd">

	<Element name="patternInstance" image="primefaces.jpg" unique="true" >
		<AttributeElement name="generator" type="#{Generator}" required="true" default="#{Generator.WEB}" />
		<AttributeElement name="name" type="java.lang.String" required="true" />
		<AttributeElement name="description" type="java.lang.String" required="false" />
		<ChildElement references="relatedFiles" unique="true" />
		<ChildElement references="faces" unique="true" />		
	</Element>
	
	<Element name="relatedFiles" unique="true" image="primefaces.jpg">
		<AttributeElement name="image" type="java.lang.String" required="true" default="primefaces.jpg" />		
		<ChildElement references="relatedFile" unique="false" />
	</Element>
	
	<Element name="relatedFile" image="primefaces.jpg"  unique="false">
		<AttributeElement name="name" type="java.lang.String" required="true" />
		<AttributeElement name="description" type="java.lang.String" required="false" />
		<AttributeElement name="reference" type="java.lang.String" required="true" />
	</Element>

	<Element name="faces" image="primefaces.jpg">
		<ChildElement references="selection" unique="true" />
		<ChildElement references="register" unique="true" />
		<ChildElement references="dialog" unique="false" />
	</Element>
	
	<Element name="selection" image="primefaces.jpg">
		<AttributeElement name="name" type="java.lang.String" required="true" />
		<AttributeElement name="description" type="java.lang.String" required="false" />
		<AttributeElement name="reference" type="java.lang.String" required="true" />
		<AttributeElement name="insert" type="#{Bool}" required="true" default="#{Bool.TRUE}" group="Mode"/>
		<AttributeElement name="update" type="#{Bool}" required="true" default="#{Bool.TRUE}" group="Mode"/>
		<AttributeElement name="delete" type="#{Bool}" required="true" default="#{Bool.TRUE}" group="Mode"/>
		<AttributeElement name="display" type="#{Bool}" required="true" default="#{Bool.TRUE}" group="Mode"/>
	</Element>
	
	<Element name="register" image="primefaces.jpg">
		<AttributeElement name="name" type="java.lang.String" required="true" />
		<AttributeElement name="description" type="java.lang.String" required="false" />
		<AttributeElement name="reference" type="java.lang.String" required="true" />
	</Element>
	
	<Element name="dialog" image="primefaces.jpg">
		<AttributeElement name="name" type="java.lang.String" required="true" />
		<AttributeElement name="description" type="java.lang.String" required="false" />
		<AttributeElement name="reference" type="java.lang.String" required="true" />
	</Element>
	
	<Element name="form" image="primefaces.jpg">
		<AttributeElement name="name" type="java.lang.String" required="false" />
	</Element>

	<Element name="table" image="primefaces.jpg">
		<AttributeElement name="name" type="java.lang.String" required="false" />
		<AttributeElement name="columns" type="java.lang.Integer" required="true" default="0" userDescription="Number of columns for distributing data" />
	</Element>

	<Element name="grid" image="primefaces.jpg">
		<AttributeElement name="name" type="java.lang.String" required="false" />
	</Element>
	
	<Element name="input" image="primefaces.jpg">
		<AttributeElement name="name" type="java.lang.String" required="false" />
		<AttributeElement name="readonly" type="java.lang.String" required="true" default="false" />
		<AttributeElement name="datatype" type="#{DataType}" required="true" default="#{DataType.ALPHANUMERIC}" />
		<AttributeElement name="datatype" type="#{DataType}" required="true" default="#{DataType.ALPHANUMERIC}" />
	</Element>
	
</PatternDefinition>