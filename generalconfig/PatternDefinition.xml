<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE PatternDefinition PUBLIC "//UNKNOWN/" "PatternDefinition.dtd">
<PatternDefinition 
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:noNamespaceSchemaLocation="PatternSchemaDefinition.xsd">

	<Element name="patterninstance" prettyName="PatternInstance" image="generic.jpg" unique="true" >
		<AttributeElement name="generator" prettyName="Generator" type="#{Generator}" required="true" default="#{Generator.WEB}" />
		<AttributeElement name="name" prettyName="Name" type="java.lang.String" required="true" />
		<AttributeElement name="description" prettyName="Description" type="java.lang.String" required="false" />
		<ChildElement references="relatedFiles" unique="true" />
		<ChildElement references="faces" unique="true" />		
	</Element>
	
	<Element name="relatedFiles" prettyName="RelatedFiles" unique="true" image="generic.jpg">
		<AttributeElement name="image" prettyName="Image" type="java.lang.String" required="true" default="generic.jpg" />		
		<ChildElement references="relatedFile" unique="false" />
	</Element>
	
	<Element name="relatedFile" prettyName="RelatedFile" image="generic.jpg"  unique="false">
		<AttributeElement name="name" prettyName="Name" type="java.lang.String" required="true" />
		<AttributeElement name="description" prettyName="Description" type="java.lang.String" required="false" />
		<AttributeElement name="reference" prettyName="Reference" type="java.lang.String" required="true" />
	</Element>

	<Element name="faces" prettyName="Faces" image="generic.jpg">
		<ChildElement references="selection" unique="true" />
		<ChildElement references="register" unique="true" />
		<ChildElement references="dialog" unique="false" />
	</Element>
	
	<Element name="selection" prettyName="Selection" image="generic.jpg">
		<AttributeElement name="name" prettyName="Name" type="java.lang.String" required="true" />
		<AttributeElement name="description" prettyName="Description" type="java.lang.String" required="false" />
		<AttributeElement name="reference" prettyName="Reference" type="java.lang.String" required="true" />
		<AttributeElement name="insert" prettyName="Insert" type="java.lang.Boolean" required="true" default="true" group="Mode"/>
		<AttributeElement name="update" prettyName="Update" type="java.lang.Boolean" required="true" default="true" group="Mode"/>
		<AttributeElement name="delete" prettyName="Delete" type="java.lang.Boolean" required="true" default="true" group="Mode"/>
		<AttributeElement name="display" prettyName="Display" type="java.lang.Boolean" required="true" default="true" group="Mode"/>
	</Element>
	
	<Element name="register" prettyName="Register" image="generic.jpg">
		<AttributeElement name="name" prettyName="Name" type="java.lang.String" required="true" />
		<AttributeElement name="description" prettyName="Description" type="java.lang.String" required="false" />
		<AttributeElement name="reference" prettyName="Reference" type="java.lang.String" required="true" />
	</Element>
	
	<Element name="dialog" prettyName="Dialog" image="generic.jpg">
		<AttributeElement name="name" prettyName="Name" type="java.lang.String" required="true" />
		<AttributeElement name="description" prettyName="Description" type="java.lang.String" required="false" />
		<AttributeElement name="reference" prettyName="Reference" type="java.lang.String" required="true" />
	</Element>
	
</PatternDefinition>